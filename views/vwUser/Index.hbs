{{/section}}
<style>
    .link{
        color: black;
        text-decoration: none;
    }
</style>





<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Họ và tên</th>
      <th scope="col">Giới tính</th>
      <th scope="col">Ngày sinh</th>
      <th scope="col">SĐT</th>
      <th scope="col">Thao tác</th>
      <th scope="col"><a href="/admin/create" class="btn btn-primary">Thêm User</a></th>
    </tr>
  </thead>
  <tbody>
    {{#each user}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.username}}</td>
      <td>{{this.fullname}}</td>
      <td>{{this.gender}}</td>
      <td>{{this.dateofbirth}}</td>
      <td>{{this.phonenum}}</td>
      <td colspan="2">
          <a href="/admin/edit/{{this.id}}" class="link">Sửa</a>
          <a href="/admin/{{this.id}}/delete" class="link" >Xóa</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>


