<div class="container">

    <section class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Sửa thông tin sản phẩm</h3>
        </div>
        <div class="panel-body">

            <form action="" class="form-horizontal" method="POST">
                <div class="form-group">
                    <label for="name" class="col-sm-3 control-label">Tên sản phẩm</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="nameProduct" id="name" value="{{product.nameProduct}}">
                    </div>
                </div> <!-- form-group // -->
                <div class="form-group">
                    <label for="name" class="col-sm-3 control-label">Giá sản phẩm</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="price" id="name" value="{{product.price}}">
                    </div>
                </div> <!-- form-group // -->
                <div class="form-group">
                    <label for="about" class="col-sm-3 control-label">Mô tả sản phẩm</label>
                    <div class="col-sm-9">
                        <textarea rows="8" class="form-control" name="description" id="about">{{product.description}}</textarea>
                    </div>
                </div> <!-- form-group // -->
                <div class="form-group">
                    <label for="img_thumb" class="col-sm-3 control-label">Link ảnh sản phẩm</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="img_thumb" id="img_thumb" value="{{product.img_thumb}}">
                    </div>
                </div> <!-- form-group // -->
                <div class="form-group">
                    <label for="qty" class="col-sm-3 control-label">Danh mục sản phẩm</label>
                    <div class="col-sm-3">
                        <select name="typeProduct" class="form-control">
                            <option value="">===Chọn===</option>
                            <option value="Điện thoại" {{selected 'Điện thoại' product.type}}>Điện thoại</option>
                            <option value="Máy tính" {{selected 'Máy tính' product.type}}>Máy tính</option>
                            <option value="Đồng hồ" {{selected 'Đồng hồ' product.type}}>Đồng hồ<option>
                        </select>
                    </div>
                </div>
                <input type="hidden" name="seller" value="{{isUser.userID}}">
                <hr>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                    </div>
                </div> <!-- form-group // -->
            </form>

        </div><!-- panel-body // -->
    </section><!-- panel// -->


</div> <!-- container// -->